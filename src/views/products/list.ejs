<!DOCTYPE html>
<html lang="es">
    <%- include("../partials/head", {title: 'Listado de Productos'}) %>
<body>
    
    <div class="todo">

        <%- include("../partials/header") %>

        <a href="#"><article class="banner"></article></a>

        <div class="products">
            <% if (homeProductos.length > 0) { %>

                <% homeProductos.forEach(product => { %>
                    <article class="product">
                        <a href="/productos/<%= product.id %>"><img src="../../../images/productos/<%= product.image %>" alt=""></a>
                        <p>$ <%= product.precio %></p>
                        <a href="/productos/<%= product.id %>"><%= product.nombre %></a>
                    </article>
                <% }) %>

            <% } else { %>

                <p>No hay productos en esta categor√≠a.</p>
                
            <% } %>
        </div>
    </div>
</body>
<div class="parent">
    <%- include('../partials/footer') %>
</div>
</html>